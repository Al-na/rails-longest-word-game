<div class="container">
  <h1>New game</h1>

  <div class="grid">
      <div class="row col-auto">
        <span class="letter"><%= @letters %></span>
      </div>
  </div>

  <h2>What is the longest word you can find?</h2>
  <form class="row g-3" action="/score" method="post" data-turbo="false">
    <div class="col-auto">
      <input type="text" name="word" class="form-control">
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-light mb-3">Play</button>
    </div>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
